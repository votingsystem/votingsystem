<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bkg_screen_vs"
    android:orientation="vertical">

    <TextView android:id="@+id/connected_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/text_header"
        android:text="@string/disconnected_lbl"
        android:layout_gravity="center"/>

    <Button android:id="@+id/toggle_contact_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/select_representative_button" />

</LinearLayout>